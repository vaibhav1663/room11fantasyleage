{
  "manifest_version": 3,
  "name": "Fantasy League Rankings",
  "version": "1.0",
  "description": "Shows fantasy cricket league rankings on Hotstar sports pages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://apis.fancraze.com/*",
    "https://sapna11.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Set Room ID"
  },
  "content_scripts": [
    {
      "matches": ["https://www.hotstar.com/in/sports/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png"
  }
}
